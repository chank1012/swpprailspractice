<h1>Listing articles</h1>

<table>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |a| %>
  <tr>
    <td><%= a.id %></td>
    <td><%= a.title %></td>
    <td><%= a.text %></td>
    <td><%= link_to 'Show', article_path(a) %></td>
    <td><%= link_to 'Edit', edit_article_path(a) %></td>
    <td><%= link_to 'Destroy', article_path(a), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path %>
